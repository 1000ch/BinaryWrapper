    "css:components": "postcss --output public/css/components.css static/css/components.css",
    "lint": "stylelint static/css/*.css"
  },
  "stylelint": {
    "extends": "stylelint-config-fresh"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "cssnano": "^3.10.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.0.0",
    "stylelint": "^7.10.1",
    "stylelint-config-fresh": "^1.0.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.4"
  }
}
